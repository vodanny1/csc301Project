<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forum__post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comineashantrehan.linkedin.httpswww.ucourse.Forum_Post"
    android:background="@color/white">

    <EditText
        android:id="@+id/QuestionTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ForumPostToForumMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Enter Title Here"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EnterQuestion"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:hint="Please enter your question here"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:text="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EnterQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/PostQuestion"
        android:background="@drawable/my_button_bg"
        />

    <TextView
        android:text="Post a Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/ForumPostHeading"
        android:textSize="24sp"
        android:textColor="#000000"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/homeAsUpIndicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ForumPostToForumMenu"
        android:background="@color/white"/>
</RelativeLayout>
