<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forum_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comineashantrehan.linkedin.httpswww.ucourse.ForumMenu"
    android:background="@color/white"
    >

    <TextView
        android:text="Forum Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/ForumMenuHeading"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ForumMenuToPost"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="404dp"
        android:background="@drawable/my_button_bg"
        android:text="Post A Question" />

    <Button
        android:id="@+id/ForumMenuToSearch"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ForumMenuToPost"
        android:layout_marginTop="61dp"
        android:background="@drawable/my_button_bg"
        android:text="Search/Answer A Question" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/homeAsUpIndicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ForumMenuToMenu"
        android:background="@color/white"/>

    <Button
        android:id="@+id/SearchAQuestion"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ForumMenuToSearch"
        android:layout_marginTop="13dp"
        android:background="@drawable/my_button_bg"
        android:text="Look For Your Questions" />

    <TextView
        android:text="Select one of the below options to either post a question or answer an existing question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/ForumMenuBody"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/ForumMenuHeading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="390dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:scaleType="centerCrop"
        android:src="@drawable/student" />
</RelativeLayout>
