<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forum__search__results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comineashantrehan.linkedin.httpswww.ucourse.Forum_Search_Results"
    >

    <ImageButton
        android:id="@+id/BackToSearchForum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/homeAsUpIndicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
         />

    <Button
        android:id="@+id/AnswerView"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AnswerSubmit"
        android:layout_marginTop="0dp"
        android:background="@drawable/my_button_bg"
        android:text="View Answer" />

    <TextView
        android:id="@+id/Search_Results"
        android:layout_width="185dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/BackToSearchForum"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-69dp"
        android:text="Search Results"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/QuestionAsked"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Search_Results"
        android:layout_marginTop="75dp"
        android:text="Questions Asked" />

    <ListView
        android:id="@+id/ListOfResults"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/QuestionAsked"
        android:layout_marginTop="39dp" />

    <EditText
        android:id="@+id/AnswerGiven"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ListOfResults"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Enter Your Answer"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/AnswerSubmit"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AnswerGiven"
        android:layout_marginTop="35dp"
        android:background="@drawable/my_button_bg"
        android:text="Submit Answer" />
</RelativeLayout>