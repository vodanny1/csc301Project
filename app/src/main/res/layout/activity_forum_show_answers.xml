<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forum__show__answers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comineashantrehan.linkedin.httpswww.ucourse.Forum_Show_Answers">

    <TextView
        android:text="View Answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/AnswerRequested"
        android:textSize="24sp"
        android:textColor="#000000"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/AnswerRequested"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:id="@+id/ListOfAnswers" />

    <ImageButton
        android:id="@+id/SeeAnswersToSearchQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:background="@color/white"
        app:srcCompat="?android:attr/homeAsUpIndicator" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SeeAnswersToSearchQ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/QuestionSelected"
        android:textColor="#000000"
        android:textSize="14sp"
        android:background="@color/white"
        />
</RelativeLayout>